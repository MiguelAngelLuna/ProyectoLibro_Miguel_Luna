<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/tvCategoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categoria"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="4dp" />

    <!-- TARJETA DEL LIBRO -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="190dp"
        android:layout_height="260dp"
        android:layout_margin="8dp"
        android:clipToOutline="true"
        android:backgroundTint="@android:color/transparent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- IMAGEN -->
            <ImageView
                android:id="@+id/ivImagen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_cafe" />

            <!-- ETIQUETA -->
            <LinearLayout
                android:id="@+id/Contenedor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_etiqueta"
                android:paddingHorizontal="7dp"
                android:paddingVertical="5dp"
                android:layout_margin="6dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iconoEtiqueta"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_estrella"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tvEtiqueta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="POPULAR"
                    android:textColor="@android:color/white"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- NOMBRE DEL LIBRO -->
            <TextView
                android:id="@+id/txNomLibro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NOMBRE LIBRO"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bg_nombre_anime"
                android:ellipsize="end"
                android:maxLines="1"/>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
